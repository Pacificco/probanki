@using Bankiru.Models.Domain.Debtors
@{
    Layout = "~/Views/Shared/Master.cshtml";

    ViewBag.Title = "Биржа долгов";
    ViewBag.metaDescription = "";
    ViewBag.metaKeywords = "";
    ViewBag.metaRobots = "noindex, nofollow";

    ViewBag.CurrentMenuItem = "debtors";
}

@section left_top
{
    @Html.Action("_getModuleOrgMenu", "Home", new { cur_id = -1 })
}
@section left_middle
{
    @Html.Action("_getModuleLastComments", "Home", new { show_article_link = true })
}

<section id="debtors-page">
    <hgroup>
        <h1>Биржа долгов</h1>
        <h2>В данном разделе публикуются объявления с предложениями о продаже/уступке права требования (цессии) финансовых обязательств юридических и физических лиц.</h2>
    </hgroup>

    @Html.Action("_getModuleDebtorsFilter", "Debtors", new { filter = new VM_DebtorsFilter() })
    <div id="wrapper-debtors-list">
        @Html.Action("_list", "Debtors", new { filter = new VM_DebtorsFilter(), page = ViewBag.DebtorsListPage })
    </div>
    <div id="create-debtor-button">
        <a class="button-blue" href="#" title="Разместить объявление">Разместить объявление</a>
    </div>
    <div id="wrapper-debtor-form">        
        @Html.Action("_getModuleDebtorForm", "Debtors", new { model = new VM_Debtor() })
    </div>
</section>
