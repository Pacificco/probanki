        Selected = Model.SelectedId == 2 ? true : false
    });
    _items.Add(new SelectListItem()
    {
        Text = "Частный долг",
        Value = "3",
        Selected = Model.SelectedId == 3 ? true : false
    });
    _items.Add(new SelectListItem()
    {
        Text = "Прочее",
        Value = "4",
        Selected = Model.SelectedId == 4 ? true : false
    });
}
@Html.DropDownList(Model.Name, _items)