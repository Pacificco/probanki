@using Bankiru.Models.Domain.Users
@model List<VM_UserTariffRequest>
@*<div id="user-balance-history-block">
    <div class="stat-block">*@
        <h2>История подписок</h2>
        <div id="user-requests-history-block">
            @if (Model.Count > 0)
            {
                foreach (VM_UserTariffRequest item in Model)
                {
                    //Дата и статус
                    <div class="request-date">
                        <p>Дата создания: <span>@item.CreateDate.ToString("dd.MM.yyyy HH:mm", System.Globalization.CultureInfo.CreateSpecificCulture("ru-RU"))</span></p>
                        <div class="request-status">
                            @if(item.IsPaid)
                            {
                                <span class="paid">Оплачена</span>
                            }
                            else
                            {
                                <span class="not-paid">Не оплачена</span>
                            }
                        </div>
                    </div>
                    
                    //Подробности
                    <div class="request-details">
                        <p>
                            Тариф: <span></span>
                        </p>
                    </div>
                    
                }
            }
            else
            {
                <p>У Вас еще нет истории подписок</p>
            }
        </div>
    @*</div>
</div>*@
