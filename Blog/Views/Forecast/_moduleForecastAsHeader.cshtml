@model Bankiru.Models.Domain.Club.VM_ForecastHeader
@if (Model.Forecasts != null && Model.Forecasts.Count > 0)
{
    <div id="forecast-header">
        @foreach (Bankiru.Models.Domain.Club.VM_Forecast item in Model.Forecasts)
        {
            <div class="forecast-prev @(Model.CurItemId == item.Id ? ("current " + item.Subject.Alias) : (item.Subject.Alias))">
            <div class="header">@Html.Raw(item.Subject.Name.Replace(" ","<br />"))</div>
            @Html.RouteLink("Сделать прогноз", "club_forecast", new { subject_id = item.Subject.Alias, id = item.Id }, new { @class = "do-forecast" })
            @if (Model.CurItemId != item.Id)
            {
                <div class="read-more">@Html.RouteLink("Подробнее", "club_forecast", new { subject_id = item.Subject.Alias, id = item.Id })</div>
            }
        </div>
        }    
    </div>
}