@model string
@{
    char[] excludes = new char[] {'Ё','Й', 'Ь', 'Ъ', 'Ы' };    
}
<div class="org-list-letters">
    @for (char ch = 'А'; ch <= 'Я'; ch++)
    {
        if (excludes.Contains(ch))
        {
            continue;
        }
        if(ch.ToString().Equals(Model))
        {
            <a class="current" href="@Url.RouteUrl("org_items", new { letter = ch.ToString(), page = 1 })" title="">@ch.ToString()</a>
        }
        else
        {
            <a href="@Url.RouteUrl("org_items", new { letter = ch.ToString(), page = 1 })" title="">@ch.ToString()</a>
        }
    }
    <span>
        @if (String.IsNullOrEmpty(Model))
        {
            <a class="current" href="@Url.RouteUrl("org_items", new { page = 1 })" title="">Все</a>
        }
        else            
        {
            <a href="@Url.RouteUrl("org_items", new { page = 1 })" title="">Все</a>
        }
    </span>
</div>