@using Bankiru.Models.Domain.News
@using Bankiru.Models.Helpers
@model VM_NewsList
@{
    ViewBag.Title = "Список новостей";
    Layout = "~/Areas/Admin/Views/Shared/MasterAdmin.cshtml";
}
@section styles{
    @Styles.Render("~/Content/admin/news/css")
}
@section adminTools{
    <div id="admin-tools">
        <p>@Html.ActionLink("Создать новость", "New")</p>
    </div>
}
@Html.Action("_getNewsListFilter", "News", new {filter = Model.Filters })
@Html.Action("_getNewsList", "News", new { model = Model})
@Html.PageLinks(@Model.PagingInfo, x => Url.Action("List", "News", new { title = Model.Filters.Title, IsActive = (int)Model.Filters.IsActive, page = x }))