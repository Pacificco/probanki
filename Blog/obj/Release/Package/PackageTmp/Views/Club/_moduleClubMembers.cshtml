@using System.Globalization
@using Bankiru.Models.Domain.Users
@model List<VM_User>
@if (Model != null && Model.Count > 0)
{
    <section class="club-users" style="border:2px dashed #f00; padding:5px; margin:5px;">
        <h3>Члены клуба</h3>
        <ul class="users">
            @foreach (VM_User u in Model)
            {
                <li>
                    <span class="user-nic">
                        @u.Nic
                    </span>
                    <span class="user-reg-date">
                        <time pubdate datetime="@u.RegistrationDate">@u.RegistrationDate.ToString("dd.MM.yyyy HH:mm", CultureInfo.CreateSpecificCulture("ru-RU"))</time>
                    </span>
                    @if(u.ForecastCount > 0)
                    {
                        <br />
                        <span class="user-forecast-count">
                            Прогнозов: @u.ForecastCount раз
                        </span>
                    }
                    @if(u.WinCount > 0)
                    {
                        <br />
                        <span class="user-win-count">
                            Побед: @u.WinCount
                        </span>
                    }
                </li>
            }
        </ul>
    </section>
}