@using System.Globalization
@using Bankiru.Models.Domain.Articles
@using Bankiru.Models.Helpers
@model List<VM_ArtItem>
@{
    int i = 0;    
}
@if (Model!= null && Model.Count > 0)
{
    <section class="related-articles-img">
        <p class="p-header">Читайте также:</p>
        <ul class="related-articles-list">
            @foreach (VM_ArtItem item in Model)
            {
                <li class="art-image-block-@i.ToString()">
                    @Html.Raw(TextHelper.GetImageFromText(item.TextPrev))
                    @Html.RouteLink(item.Title, "art_item", new { art_id = item.Alias, cat_id = item.Category.Alias }, new { title = item.Title })
                </li>
                i++;
            }
        </ul>
    </section>
}