@using Bankiru.Models.Domain.OrgsCategories
@model VM_OrgCategories
<section class="org-menu">
    <h3>Организации</h3>
    <nav>
        <ul>
            @if (Model != null && Model.items != null && Model.items.Count > 0)
            {
                foreach (VM_OrgCategoryItem item in Model.items)
                {                
                    if (item.Id == Model.currentId)
                    {
                        <li class = "current">@Html.RouteLink(item.Title, "org_items", new { cat_id = item.Alias }, new { title = item.Title })</li>
                    }
                    else
                    {
                        <li>@Html.RouteLink(item.Title, "org_items", new { cat_id = item.Alias }, new { title = item.Title })</li>
                    }                
                }
            }
        </ul>
    </nav>
</section>
