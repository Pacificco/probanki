@using Bankiru.Models.Domain.Other
@model VM_StringDropDown
@{
    List<SelectListItem> _items = new List<SelectListItem>();
    _items.Add(new SelectListItem()
    {
        Text = "ВСЕ",
        Value = "0",
        Selected = Model.SelectedId == 0 ? true : false
    });
    _items.Add(new SelectListItem()
    {
        Text = "Юридическое лицо",
        Value = "1",
        Selected = Model.SelectedId == 1 ? true : false
    });
    _items.Add(new SelectListItem()
    {
        Text = "Физическое лицо",
        Value = "2",
        Selected = Model.SelectedId == 2 ? true : false
    });
}
@Html.DropDownList(Model.Name, _items)