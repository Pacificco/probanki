@using Bankiru.Models.Domain
@using Bankiru.Models.Domain.News
@model VM_NewsFilters
<div id="news-filters">
    @using (Html.BeginForm("List","News", FormMethod.Get))
    {
        @Html.ValidationSummary(true)        
        <div class="editor-field editor-field-title">
            @Html.LabelFor(model => model.Title)
            @Html.EditorFor(model => model.Title)
            @Html.ValidationMessageFor(model => model.Title)
        </div>        
        <div class="editor-field editor-field-active">
            @Html.LabelFor(model => model.IsActive)
            @Html.Action("_getActiveDropDownList", "News", new { selectedId = Model.IsActive, 
           firstItem = EnumFirstDropDownItem.All, id = "IsActive" })
            @Html.ValidationMessageFor(model => model.IsActive)
        </div>
        <div class="editor-field editor-field-submit">
            <input type="submit" value="Показать" />
        </div>        
    }
</div>
