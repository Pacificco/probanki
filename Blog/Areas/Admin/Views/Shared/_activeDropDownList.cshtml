@using Bankiru.Models.Domain
@using Bankiru.Models.Domain.Other
@model VM_DropDownActive
@{
    List<SelectListItem> _items = new List<SelectListItem>();
    _items.Add(new SelectListItem()
    {
        Text = "ВСЕ",
        Value = "0",
        Selected = Model.SelectedId == EnumBoolType.None ? true : false
    });
    _items.Add(new SelectListItem()
    {
        Text = "Активные",
        Value = "1",
        Selected = Model.SelectedId == EnumBoolType.True ? true : false
    });
    _items.Add(new SelectListItem()
    {
        Text = "Не активные",
        Value = "2",
        Selected = Model.SelectedId == EnumBoolType.False ? true : false
    });
}
@Html.DropDownList(Model.Name, _items)