@using Bankiru.Models.Domain
@using Bankiru.Models.Domain.Users
@model VM_UsersFilters
<div id="users-filters">
    @using (Html.BeginForm("List","Users", FormMethod.Get))
    {
        @Html.ValidationSummary(true)        
        <div class="editor-field editor-field-nic">
            @Html.LabelFor(model => model.Email)
            @Html.EditorFor(model => model.Email)
            @Html.ValidationMessageFor(model => model.Email)
        </div>
        <div class="editor-field editor-field-email">
            @Html.LabelFor(model => model.Nic)
            @Html.EditorFor(model => model.Nic)
            @Html.ValidationMessageFor(model => model.Nic)
        </div>
        <div class="editor-field editor-field-name">
            @Html.LabelFor(model => model.Name)
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </div>
        <div class="editor-field editor-field-active">
            @Html.LabelFor(model => model.IsActive)
            @Html.Action("_getActiveDropDownList", "Users", new { selectedId = Model.IsActive, 
           firstItem = EnumFirstDropDownItem.All, id = "IsActive" })
            @Html.ValidationMessageFor(model => model.IsActive)
        </div>
        <div class="editor-field editor-field-submit">
            <input type="submit" value="Показать" />
        </div>        
    }
</div>
